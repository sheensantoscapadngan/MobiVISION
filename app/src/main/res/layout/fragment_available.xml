<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCCCCC"
    tools:context=".AvailableFragment">

    <EditText
        android:id="@+id/editTextAvailableSearch"
        android:layout_width="310dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/search_available"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingLeft="50dp" />

    <RelativeLayout
        android:id="@+id/relativeLayoutAvailable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/editTextAvailableSearch"
        android:layout_margin="20dp"
        android:background="@drawable/fragment_bg">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewAvailable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp" />
    </RelativeLayout>
</RelativeLayout>